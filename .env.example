
# SERVER
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# DATABASE
DATABASE_URL=postgresql://myUser:mySecret@localhost:5433/mydb?schema=public
DATABASE_USER=myUser
DATABASE_PASSWORD=mySecret
DATABASE_NAME=mydb

# JWT - use Base64 or raw PEM in multiline vars (docker secrets/vault recommended)
JWT_ALG=RS256
JWT_ISS=nest-auth-template
JWT_AUD=nest-auth-clients
JWT_ACCESS_TTL=900                            # 15m
JWT_REFRESH_TTL=2592000                       # 30d (in seconds)
JWT_PRIVATE_KEY_BASE64=dummy-private-key      # base64-encoded PKCS8 private key
JWT_PUBLIC_KEY_BASE64=dummy-public-key        # base64-encoded SPKI public key
JWT_SECRET=dummy-secret                       # for HS* algorithms only

# Security/CORS
CORS_ORIGINS=http://localhost:5173
RATE_LIMIT_TTL=60                             # in seconds
RATE_LIMIT_LIMIT=100                          # max requests per TTL

# Password hashing
PASSWORD_PEPPER=dummy-pass-pepper
